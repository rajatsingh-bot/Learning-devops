pipeline {
    agent any

    environment {
        PATH = "C:\\Users\\Rajat Singh\\AppData\\Roaming\\npm;${env.PATH}"
        HUB_ORG_DH                  = credentials('HUB_ORG_DH')
        SFDC_HOST_DH                = credentials('SFDC_HOST_DH')
        CONNECTED_APP_CONSUMER_KEY_DH = credentials('CONNECTED_APP_CONSUMER_KEY_DH')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "CODE GITHUB SE AA GAYA — BRANCH: ${env.BRANCH_NAME}"
            }
        }

        stage('Login Dev Hub') {
            steps {
                withCredentials([file(credentialsId: 'sfdc-jwt-key', variable: 'key')]) {
                    bat """
                        sf org login jwt ^
                          --client-id %CONNECTED_APP_CONSUMER_KEY_DH% ^
                          --username %HUB_ORG_DH% ^
                          --jwt-key-file "%key%" ^
                          --instance-url %SFDC_HOST_DH% ^
                          --alias MyDevHub
                    """
                    bat 'sf config set target-org MyDevHub --global'
                    echo "DEV HUB LOGIN + DEFAULT SET — 100% SUCCESS"
                }
            }
        }

        stage('Deploy to Dev Hub') {
            steps {
                bat 'sf project deploy start --manifest manifest/package.xml --target-org MyDevHub --wait 60'
                echo "12 NOV 2025 — DATA DEV HUB MEIN LIVE HO GAYA — RAJAT WON"
            }
        }
    }

    post {
        success { 
            echo "RAJAT NE CI/CD COMPLETE KIYA — DEV HUB MEIN SAB KUCH LIVE — MENTOR SHOCK"
        }
        always { 
            bat 'sf org logout --target-org MyDevHub --no-prompt || true' 
        }
    }
}
