pipeline {
    agent any

    environment {
        PATH = "C:\\Users\\Rajat Singh\\AppData\\Roaming\\npm;${env.PATH}"
        HUB_ORG_DH                    = credentials('HUB_ORG_DH')
        SFDC_HOST_DH                  = credentials('SFDC_HOST_DH')
        CONNECTED_APP_CONSUMER_KEY_DH = credentials('CONNECTED_APP_CONSUMER_KEY_DH')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "CODE GITHUB SE AA GAYA — BRANCH: ${env.BRANCH_NAME}"
            }
        }

        stage('Login Dev Hub') {
            steps {
                withCredentials([file(credentialsId: 'sfdc-jwt-key', variable: 'jwt_key')]) {
                    bat """
                        sf org login jwt ^
                          --client-id %CONNECTED_APP_CONSUMER_KEY_DH% ^
                          --username %HUB_ORG_DH% ^
                          --jwt-key-file "%jwt_key%" ^
                          --instance-url %SFDC_HOST_DH% ^
                          --alias MyDevHub ^
                          --set-default
                    """
                    echo "DEV HUB LOGIN + DEFAULT SET — 100% SUCCESS"
                }
            }
        }

        stage('Run Apex Unit Tests') {
            steps {
                script {
                    // Check if there are any Apex test classes
                    def testClasses = bat(returnStdout: true, script: 'dir /b force-app\\main\\default\\classes\\*Test.cls 2>nul || echo NO_TESTS').trim()

                    if (testClasses.contains('NO_TESTS') || testClasses.trim().isEmpty()) {
                        echo "Koi Apex Test Class Nahi Mila — Skipping Tests (Safe Mode)"
                        // Still generate empty JUnit to avoid Jenkins error
                        writeFile file: 'test-results/junit/empty.xml', text: '''<?xml version="1.0" encoding="UTF-8"?>
<testsuites>
  <testsuite name="NoTests" tests="1" failures="0" errors="0" skipped="0">
    <testcase name="No Apex Tests Found" classname="Skipped"/>
  </testsuite>
</testsuites>'''
                    } else {
                        echo "Test Classes Found — Running All Tests..."
                        bat '''
                            sf apex test run ^
                              --code-coverage ^
                              --output-dir test-results ^
                              --result-format junit ^
                              --wait 30 ^
                              --detailed-conflict-report
                        '''
                    }
                }
                junit testResults: 'test-results/junit/*.xml', allowEmptyResults: true
                echo "ALL APEX UNIT TESTS PASSED YA SKIP HUA — RAJAT KA CODE SAFE HAI"
            }
            post {
                always {
                    archiveArtifacts artifacts: 'test-results/**', allowEmptyArchive: true
                }
            }
        }

        stage('Deploy to Dev Hub') {
            when {
                expression { currentBuild.result == null || currentBuild.result == 'SUCCESS' }
            }
            steps {
                bat '''
                    sf project deploy start ^
                      --manifest manifest/package.xml ^
                      --target-org MyDevHub ^
                      --test-level RunLocalTests ^
                      --wait 60 ^
                      --verbose
                '''
                echo "13 NOV 2025 — CODE + METADATA DEV HUB MEIN LIVE "
            }
        }
    }

    post {
        success {
            echo "RAJAT NE FULL CI/CD + UNIT TESTING SETUP KIYA"
        }
        failure {
            echo "KUCH GALAT HUA — RAJAT FIX KAR,!"
        }
        always {
            bat 'sf org logout --target-org MyDevHub --no-prompt || true'
            cleanWs()
        }
    }
}
