pipeline {
    agent any

    // ←←← THIS LINE ADDS YOUR CLI TO JENKINS PATH
    environment {
        PATH = "C:\\Users\\Rajat Singh\\AppData\\Roaming\\npm;${env.PATH}"
        
        HUB_ORG_DH                  = credentials('HUB_ORG_DH')
        SFDC_HOST_DH                = credentials('SFDC_HOST_DH')
        CONNECTED_APP_CONSUMER_KEY_DH = credentials('CONNECTED_APP_CONSUMER_KEY_DH')
    }

    stages {
        stage('Test CLI') {
            steps {
                bat 'sf --version'
                echo "CLI FOUND — RAJAT IS GENIUS!"
            }
        }

        stage('Login Dev Hub') {
            steps {
                withCredentials([file(credentialsId: 'sfdc-jwt-key', variable: 'key')]) {
                    bat """
                        sf org login jwt ^
                          --client-id %CONNECTED_APP_CONSUMER_KEY_DH% ^
                          --username %HUB_ORG_DH% ^
                          --jwt-key-file "%key%" ^
                          --instance-url %SFDC_HOST_DH% ^
                          --set-default-dev-hub ^
                          --alias DevHub
                    """
                    echo "LOGIN SUCCESS — CONNECTED TO SALESFORCE!"
                }
            }
        }

        stage('Deploy Code') {
            steps {
                bat """
                    sf project deploy start ^
                      --manifest manifest/package.xml ^
                      --target-org DevHub ^
                      --wait 30
                """
                echo "DEPLOYED SUCCESSFULLY — RAJAT = DEVOPS GOD!"
            }
        }
    }

    post {
        success { 
            echo "FULL CI/CD LIVE — GREEN BUILD — YOU ARE UNSTOPPABLE!"
        }
    }
}
