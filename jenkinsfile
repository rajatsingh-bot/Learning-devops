pipeline {
    agent any

    environment {
        PATH = "C:\\Users\\Rajat Singh\\AppData\\Roaming\\npm;${env.PATH}"
        HUB_ORG_DH                  = credentials('HUB_ORG_DH')
        SFDC_HOST_DH                = credentials('SFDC_HOST_DH')
        CONNECTED_APP_CONSUMER_KEY_DH = credentials('CONNECTED_APP_CONSUMER_KEY_DH')
    }

    stages {
        stage('Test CLI') {
            steps {
                bat 'sf --version'
                echo "CLI READY — RAJAT IS KING"
            }
        }

        stage('Login to DEV HUB (NOT SCRATCH)') {
            steps {
                withCredentials([file(credentialsId: 'sfdc-jwt-key', variable: 'key')]) {
                    bat """
                        sf org login jwt ^
                          --client-id %CONNECTED_APP_CONSUMER_KEY_DH% ^
                          --username %HUB_ORG_DH% ^
                          --jwt-key-file "%key%" ^
                          --instance-url %SFDC_HOST_DH% ^
                          --set-alias MyDevHub ^
                          --set-default
                    """
                    echo "DEV HUB LOGIN SUCCESS — NO SCRATCH ORG"
                }
            }
        }

        stage('Deploy DIRECTLY to DEV HUB') {
            steps {
                bat """
                    sf project deploy start ^
                      --manifest manifest/package.xml ^
                      --target-org MyDevHub ^
                      --wait 30
                """
                echo "DEPLOYED TO DEV HUB — NOT SCRATCH — 12 NOV 2025"
            }
        }
    }

    post {
        success { 
            echo "DATA SIRF DEV HUB PAR GAYA — SCRATCH ORG KO CHHOD DIYA — RAJAT WON"
        }
        always {
            bat 'sf org logout --target-org MyDevHub --no-prompt || true'
        }
    }
}
