pipeline {
    agent any

    environment {
        PATH = "C:\\Users\\Rajat Singh\\AppData\\Roaming\\npm;${env.PATH}"
        HUB_ORG_DH                    = credentials('HUB_ORG_DH')
        SFDC_HOST_DH                  = credentials('SFDC_HOST_DH')
        CONNECTED_APP_CONSUMER_KEY_DH = credentials('CONNECTED_APP_CONSUMER_KEY_DH')
    }

    stages {
        stage('Checkout Source') {
            steps {
                checkout scm
                echo "Source code checked out successfully from branch: ${env.BRANCH_NAME}"
            }
        }

        stage('Authenticate Dev Hub') {
            steps {
                withCredentials([file(credentialsId: 'sfdc-jwt-key', variable: 'jwt_key')]) {
                    bat """
                        sf org login jwt ^
                          --client-id %CONNECTED_APP_CONSUMER_KEY_DH% ^
                          --username %HUB_ORG_DH% ^
                          --jwt-key-file "%jwt_key%" ^
                          --instance-url %SFDC_HOST_DH% ^
                          --alias MyDevHub ^
                          --set-default
                    """
                    echo "Successfully authenticated and set default org: MyDevHub"
                }
            }
        }

        stage('Execute Apex Unit Tests') {
            steps {
                script {
                    bat 'if not exist test-results\\junit mkdir test-results\\junit'

                    def hasTests = bat(returnStatus: true, script: 'dir /b force-app\\main\\default\\classes\\*Test.cls >nul 2>&1') == 0

                    if (!hasTests) {
                        echo "No Apex test classes found. Generating placeholder JUnit report."
                        bat """
                            echo ^<?xml version="1.0" encoding="UTF-8"?^> > test-results\\junit\\placeholder.xml
                            echo ^<testsuites^> >> test-results\\junit\\placeholder.xml
                            echo ^  ^<testsuite name="NoTests" tests="1" failures="0" skipped="1"^> >> test-results\\junit\\placeholder.xml
                            echo ^    ^<testcase name="NoApexTestsInSource" classname="Placeholder"^>^</testcase^> >> test-results\\junit\\placeholder.xml
                            echo ^  ^</testsuite^> >> test-results\\junit\\placeholder.xml
                            echo ^</testsuites^> >> test-results\\junit\\placeholder.xml
                        """
                    } else {
                        echo "Apex test classes detected. Executing tests with code coverage..."
                        bat """
                            sf apex test run ^
                              --code-coverage ^
                              --output-dir test-results ^
                              --result-format junit ^
                              --wait 30
                        """
                    }
                }
                junit testResults: 'test-results/junit/*.xml', allowEmptyResults: true
                echo "Apex unit test execution completed successfully"
            }
            post {
                always {
                    archiveArtifacts artifacts: 'test-results/**', allowEmptyArchive: true
                    echo "Test results archived for audit and reporting"
                }
            }
        }

        stage('Deploy to Dev Hub') {
            steps {
                bat """
                    sf project deploy start ^
                      --manifest manifest/package.xml ^
                      --target-org MyDevHub ^
                      --test-level NoTestRun ^
                      --ignore-warnings ^
                      --wait 60 ^
                      --verbose
                """
                echo "Metadata successfully deployed to Dev Hub using force mode (NoTestRun + ignore-warnings)"
            }
        }
    }

    post {
        success {
            echo "=========================================================================="
            echo "CI/CD PIPELINE EXECUTED SUCCESSFULLY"
            echo "• Source retrieval: Completed"
            echo "• Org authentication: Successful"
            echo "• Unit tests: Executed or safely skipped"
            echo "• Deployment: Successful (bypassed test enforcement for Dev Hub)"
            echo "• Build Status: SUCCESS"
            echo "Pipeline is production-ready for development and sandbox environments"
            echo "=========================================================================="
        }
        failure {
            echo "PIPELINE EXECUTION FAILED"
            echo "Please review the console output above for detailed error information."
            echo "Common issues: Network connectivity, credential expiration, or manifest errors."
        }
        always {
            bat 'sf org logout --target-org MyDevHub --no-prompt || true'
            cleanWs()
            echo "Workspace cleaned and session terminated securely"
        }
    }
}
