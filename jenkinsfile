pipeline {
    agent any

    environment {
        PATH = "C:\\Users\\Rajat Singh\\AppData\\Roaming\\npm;${env.PATH}"
        HUB_ORG_DH                    = credentials('HUB_ORG_DH')
        SFDC_HOST_DH                  = credentials('SFDC_HOST_DH')
        CONNECTED_APP_CONSUMER_KEY_DH = credentials('CONNECTED_APP_CONSUMER_KEY_DH')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "CODE GITHUB SE AA GAYA — BRANCH: ${env.BRANCH_NAME}"
            }
        }

        stage('Login Dev Hub') {
            steps {
                withCredentials([file(credentialsId: 'sfdc-jwt-key', variable: 'jwt_key')]) {
                    bat """
                        sf org login jwt ^
                          --client-id %CONNECTED_APP_CONSUMER_KEY_DH% ^
                          --username %HUB_ORG_DH% ^
                          --jwt-key-file "%jwt_key%" ^
                          --instance-url %SFDC_HOST_DH% ^
                          --alias MyDevHub ^
                          --set-default
                    """
                    echo "DEV HUB LOGIN + DEFAULT SET — 100% SUCCESS"
                }
            }
        }

        stage('Run Apex Unit Tests') {
            steps {
                script {
                    // Run all local tests and generate JUnit report
                    bat '''
                        sf apex test run \
                          --tests * \
                          --code-coverage \
                          --output-dir test-results \
                          --result-format junit \
                          --wait 30
                    '''
                }
                // Publish test results in Jenkins
                junit testResults: 'test-results/junit/*.xml', allowEmptyResults: false
                echo "ALL APEX UNIT TESTS PASSED — RAJAT KA CODE BULLETPROOF"
            }
            post {
                always {
                    // Archive code coverage and test results
                    archiveArtifacts artifacts: 'test-results/**', allowEmptyArchive: true
                }
                failure {
                    error "UNIT TESTS FAILED — RAJAT FIX KAR, WARNA MENTOR GAALI DEGA"
                }
            }
        }

        stage('Deploy to Dev Hub') {
            when {
                expression { currentBuild.result == null || currentBuild.result == 'SUCCESS' }
            }
            steps {
                bat '''
                    sf project deploy start \
                      --manifest manifest/package.xml \
                      --target-org MyDevHub \
                      --test-level RunLocalTests \
                      --wait 60 \
                      --verbose
                '''
                echo "12 NOV 2025 — DATA + CODE DEV HUB MEIN LIVE HO GAYA — RAJAT WON BIG TIME"
            }
        }
    }

    post {
        success {
            echo "RAJAT NE CI/CD + UNIT TESTING COMPLETE KIYA — DEV HUB MEIN SAB KUCH LIVE — MENTOR SHOCK + RESPECT ++"
        }
        failure {
            echo "PIPELINE FAIL HO GAYA — RAJAT CHECK KAR, JALDI FIX KAR!"
        }
        always {
            bat 'sf org logout --target-org MyDevHub --no-prompt || true'
            cleanWs() // Optional: clean workspace
        }
    }
}
